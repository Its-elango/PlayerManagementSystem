@model DataManagementSystem.Models.credentialModel

<script src="https://kit.fontawesome.com/ce19876732.js" crossorigin="anonymous"></script>
<!-- CSS styles for the background image -->
<style>
    body {
        background-image: url('../../content/img/signinback.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<!-- Page title -->
<h1 class="text-center">Sign in</h1>

<!-- Begin the HTML form for user sign-in -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Form fields and labels -->
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Username input field -->
        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-10 col-xl-10 text-center">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <input type="text" id="Username" name="Username" placeholder="Enter username">
            <div>
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Password input field -->
        <div class="form-group col-xs-12 col-sm-12col-md-12 col-lg-10 col-xl-10 text-center">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <input type="password" id="Password" name="Password" placeholder="Enter password">
            <div>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Submit button -->
        <div class="form-group submit col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-10 text-center">
         
                <button type="submit" class="btn btn-danger my-3">Sign in  <i class="fa fa-arrow-right-to-bracket"></i> </button>
       
        </div>
    </div>
}

<!-- Include scripts for client-side validation -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
